<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="person" class="basic_bean_configuration.Person">
           <constructor-arg name="id" value="777"></constructor-arg>
           <constructor-arg name="name" value="Mary"></constructor-arg>
           <property name="taxId" value="123"></property>
          <!--  the name of the property is determined by the setter of
                the Person class. ref allows you to type the id for another \
                existing bean that will then be injected into this bean -->
           <property name="address" ref="address"></property>
       </bean>

      <bean id="address" class="basic_bean_configuration.Address">
        <constructor-arg name="street" value="1 Church Lane"></constructor-arg>
        <constructor-arg name="postcode" value="9876"></constructor-arg>
    </bean>
</beans>